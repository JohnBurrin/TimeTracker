<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="ThemeBase" parent="">
		<item name="android:background">#ff212121</item>
		<item name="android:padding">10dp</item>
	</style>
	<style name="TextStyle" parent="ThemeBase">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#efefefef</item>
		<item name="android:textColorHint">#cdcdcd</item>
	</style>
	<style name="TimerStyle" parent="ThemeBase">
		<item name="android:textColor">#00ff00</item>
		<item name="android:textSize">60dp</item>
	</style>
	<style name="SpinnerBase" parent="TextStyle">
		<item name="android:textSize">20sp</item>
	</style>
	<style name="SpinnerItemStyle" parent="SpinnerBase">
		<item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">2dp</item>
	</style>
</resources>